<Window x:Class="Epossible_User_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Epossible_User_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>
        
        <Label Content="ePossible User manager" HorizontalAlignment="Left" Margin="287,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Content="Please select an option from below, click run to start the process." HorizontalAlignment="Left" Margin="15,104,0,0" VerticalAlignment="Top" Width="431" FontSize="14"/>
        <RadioButton x:Name="AddUserRB" Content="Add new employee to the system" HorizontalAlignment="Left" Margin="15,165,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="ManageUserRB" Content="Manage employee settings/password" HorizontalAlignment="Left" Margin="15,213,0,0" VerticalAlignment="Top"/>
        <Button x:Name="RunBTN" Content="Run" HorizontalAlignment="Left" Margin="534,376,0,0" VerticalAlignment="Top" Width="75" Click="Run_Click"/>
        <Button x:Name="CloseBTN" Content="Close" HorizontalAlignment="Left" Margin="646,376,0,0" VerticalAlignment="Top" Width="75" Click="Close_Click"/>
    </Grid>
</Window>
